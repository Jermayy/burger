<h1>Burgers!</h1>


<container>
  <div class="uneaten-burger">
  <h2>Burgers that are not devoured!</h2>

  <ul>
    {{#each burgers}}
      {{#unless devour}}
        {{> burgers/burger-block devour=true}}
     {{/unless}}
     {{/each}}
</ul>
</div>



<div class="devoured-burger col-md-6">
<h2>Burgers that have been devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devour}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>
</div>

</container>



<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">New Burger to eat:</label>
    <input type="text" id="bu" name="burger_name" placeholder="Add a new burger!">
  </div>

   <div class="form-group">
    <label for="devour"></label><br>
    <input type="radio" name="devour" value="1" checked> Devoured!<br>
    <input type="radio" name="devour" value="0"> Uneaten!
 </div>

  <button type="submit">Add Burger</button>
</form>
